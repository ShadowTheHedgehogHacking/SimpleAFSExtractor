<Window x:Class="SimpleAFSExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleAFSExtractor"
        mc:Ignorable="d"
        Title="sAFSe 1.0.1" Height="200" Width="200" MaxHeight="200" MaxWidth="200" MinHeight="200" MinWidth="200" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Center">
        <Button Content="Open" HorizontalAlignment="Stretch" Margin="0,0,0,10" VerticalAlignment="Stretch" Height="35" Width="100" Click="ButtonOpen_Click"/>
        <Label Name="filePicked" Content="No AFS loaded" HorizontalAlignment="Center"/>
        <CheckBox Name="indexExportCheckbox" Content="Add index to name" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Stretch" IsChecked="True" />
        <Button Name="extractButton" Content="Extract" HorizontalAlignment="Stretch" Margin="0,10,0,0" VerticalAlignment="Stretch" Height="35" Width="100" IsEnabled="False" Click="ButtonExtract_Click"/>
    </StackPanel>
</Window>
